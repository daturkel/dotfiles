{
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "pyright.disableDiagnostics": false,
    "coc.source.around.disableSyntaxes": ["comment","string"],
    "coc.source.buffer.disableSyntaxes": ["comment","string"],
    "suggest.autoTrigger": "none",
    "suggest.minTriggerInputLength": 3,
    "suggest.noselect": false,
    "python.analysis.typeCheckingMode": "basic",
    "diagnostic.enableSign": true,
    "diagnostic.errorSign": "",
    "diagnostic.infoSign": "",
    "diagnostic.hintSign": "",
    "pyright.disableLanguageServices": false,
    "inlayHint.enable": false,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/"],
            "filetypes": ["go"],
            "initializationOptions": 
                {"usePlaceholders": true}
        }
    },
    "snippets.ultisnips.pythonPrompt": false,
    "outline.codeActionKinds": ["","quickfix"],
    "outline.expandLevel": 0,
    "outline.sortBy": "position"
}
